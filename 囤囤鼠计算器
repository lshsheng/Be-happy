    <script>
        // æ¸¸æˆèƒŒæ™¯å›¾ç‰‡URLï¼ˆä½¿ç”¨æ‚¨æŒ‡å®šçš„é“¾æ¥ï¼‰
        const gameBackgrounds = {
            yishanliang: 'https://images.unsplash.com/photo-1542751371-adc38448a05e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', // é“¾æ¥3 (2891Ã—3840) - ä»¥é—ªäº®ä¹‹å
            yuanshen: 'https://images.unsplash.com/photo-1635805737707-575885ab0820?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', // é“¾æ¥2 (1146Ã—717) - åŸç¥
            guangyuye: 'https://images.unsplash.com/photo-1550745165-9bc0b252726f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', // é“¾æ¥1 (474Ã—325) - å…‰ä¸å¤œä¹‹æ‹
            none: ''
        };

        // æ¸¸æˆæœˆå¡é…ç½®
        const gameConfigs = {
            yishanliang: {
                name: "ä»¥é—ªäº®ä¹‹å",
                smallCardValue: 60,
                largeCardValue: 110,
                yearCardValue: 0,
                largeCardEnabled: true,
                yearCardEnabled: false
            },
            yuanshen: {
                name: "åŸç¥",
                smallCardValue: 90,
                largeCardValue: 0,
                yearCardValue: 0,
                largeCardEnabled: false,
                yearCardEnabled: false
            },
            guangyuye: {
                name: "å…‰ä¸å¤œä¹‹æ‹",
                smallCardValue: 150,
                largeCardValue: 300,
                yearCardValue: 100,
                largeCardEnabled: true,
                yearCardEnabled: true
            }
        };

        // è·å–DOMå…ƒç´ 
        const gameSelect = document.getElementById('gameSelect');
        const smallCard = document.getElementById('smallCard');
        const largeCard = document.getElementById('largeCard');
        const yearCard = document.getElementById('yearCard');
        const smallCardInput = document.getElementById('smallCardInput');
        const largeCardInput = document.getElementById('largeCardInput');
        const yearCardInput = document.getElementById('yearCardInput');
        const smallCardDaily = document.getElementById('smallCardDaily');
        const largeCardDaily = document.getElementById('largeCardDaily');
        const yearCardResource = document.getElementById('yearCardResource');
        const smallCardLabel = document.getElementById('smallCardLabel');
        const largeCardLabel = document.getElementById('largeCardLabel');
        const yearCardLabel = document.getElementById('yearCardLabel');
        const daysInput = document.getElementById('days');
        const xDaysSpan = document.getElementById('xDays');
        const calculateBtn = document.getElementById('calculateBtn');
        const resetBtn = document.getElementById('resetBtn');
        const resultDiv = document.getElementById('result');
        const totalResourceSpan = document.getElementById('totalResource');
        const daysCountSpan = document.getElementById('daysCount');
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;
        
        // å½“å‰é€‰æ‹©çš„æ¸¸æˆ
        let currentGame = 'none';
        
        // æ¸¸æˆé€‰æ‹©äº‹ä»¶ç›‘å¬
        gameSelect.addEventListener('change', function() {
            currentGame = this.value;
            updateGameConfig();
        });
        
        // æ›´æ–°æ¸¸æˆé…ç½®
        function updateGameConfig() {
            const config = gameConfigs[currentGame] || {};
            
            // æ›´æ–°èƒŒæ™¯å›¾ç‰‡ - åªæœ‰åœ¨é€‰æ‹©å…·ä½“æ¸¸æˆæ—¶æ‰åº”ç”¨èƒŒæ™¯
            if (currentGame !== 'none' && gameBackgrounds[currentGame]) {
                const bgImages = [gameBackgrounds[currentGame]]; // åªä½¿ç”¨æŒ‡å®šçš„èƒŒæ™¯å›¾
                const randomIndex = 0; // æ€»æ˜¯ä½¿ç”¨ç¬¬ä¸€ä¸ªï¼ˆä¹Ÿæ˜¯å”¯ä¸€ä¸€ä¸ªï¼‰èƒŒæ™¯å›¾
                body.style.backgroundImage = `url('${bgImages[randomIndex]}')`;
            } else {
                body.style.backgroundImage = '';
            }
            
            // æ›´æ–°æœˆå¡è¾“å…¥æ¡†çš„å ä½ç¬¦
            if (config.smallCardValue) {
                smallCardDaily.placeholder = `æ¯å¤©è·å–èµ„æºæ•°é‡ï¼ˆé»˜è®¤ï¼š${config.smallCardValue}ï¼‰`;
            }
            
            if (config.largeCardValue) {
                largeCardDaily.placeholder = `æ¯å¤©è·å–èµ„æºæ•°é‡ï¼ˆé»˜è®¤ï¼š${config.largeCardValue}ï¼‰`;
            }
            
            if (config.yearCardValue) {
                yearCardResource.placeholder = `ç›®å‰å°šæœªé¢†å–çš„å¹´å¡èµ„æºæ•°é‡ï¼ˆé»˜è®¤ï¼š${config.yearCardValue}ï¼‰`;
            }
            
            // æ›´æ–°å¤§æœˆå¡å’Œå¹´å¡çš„çŠ¶æ€
            if (config.largeCardEnabled !== undefined) {
                largeCard.disabled = !config.largeCardEnabled;
                largeCardLabel.classList.toggle('disabled', !config.largeCardEnabled);
                
                if (!config.largeCardEnabled) {
                    largeCard.checked = false;
                    largeCardInput.classList.remove('show');
                }
            }
            
            if (config.yearCardEnabled !== undefined) {
                yearCardLabel.style.display = config.yearCardEnabled ? 'flex' : 'none';
                yearCardInput.style.display = config.yearCardEnabled ? 'none' : 'none';
                
                if (!config.yearCardEnabled) {
                    yearCard.checked = false;
                    yearCardInput.classList.remove('show');
                }
            }
            
            // å¦‚æœå½“å‰å‹¾é€‰äº†æœˆå¡ï¼Œè‡ªåŠ¨å¡«å……é»˜è®¤å€¼
            if (smallCard.checked && config.smallCardValue) {
                smallCardDaily.value = config.smallCardValue;
            }
            
            if (largeCard.checked && config.largeCardValue && config.largeCardEnabled) {
                largeCardDaily.value = config.largeCardValue;
            }
            
            if (yearCard.checked && config.yearCardValue && config.yearCardEnabled) {
                yearCardResource.value = config.yearCardValue;
            }
        }
        
        // å¡ç‰Œå¤é€‰æ¡†äº‹ä»¶ç›‘å¬
        smallCard.addEventListener('change', function() {
            smallCardInput.classList.toggle('show', this.checked);
            
            // å¦‚æœå‹¾é€‰ä¸”å·²é€‰æ‹©æ¸¸æˆï¼Œè‡ªåŠ¨å¡«å……é»˜è®¤å€¼
            if (this.checked && currentGame !== 'none' && gameConfigs[currentGame]?.smallCardValue) {
                smallCardDaily.value = gameConfigs[currentGame].smallCardValue;
            } else if (!this.checked) {
                smallCardDaily.value = '';
            }
        });
        
        largeCard.addEventListener('change', function() {
            largeCardInput.classList.toggle('show', this.checked);
            
            // å¦‚æœå‹¾é€‰ä¸”å·²é€‰æ‹©æ¸¸æˆï¼Œè‡ªåŠ¨å¡«å……é»˜è®¤å€¼
            if (this.checked && currentGame !== 'none' && gameConfigs[currentGame]?.largeCardValue && gameConfigs[currentGame]?.largeCardEnabled) {
                largeCardDaily.value = gameConfigs[currentGame].largeCardValue;
            } else if (!this.checked) {
                largeCardDaily.value = '';
            }
        });
        
        yearCard.addEventListener('change', function() {
            yearCardInput.classList.toggle('show', this.checked);
            
            // å¦‚æœå‹¾é€‰ä¸”å·²é€‰æ‹©æ¸¸æˆï¼Œè‡ªåŠ¨å¡«å……é»˜è®¤å€¼
            if (this.checked && currentGame !== 'none' && gameConfigs[currentGame]?.yearCardValue && gameConfigs[currentGame]?.yearCardEnabled) {
                yearCardResource.value = gameConfigs[currentGame].yearCardValue;
            } else if (!this.checked) {
                yearCardResource.value = '';
            }
        });
        
        // å¤©æ•°è¾“å…¥å˜åŒ–æ—¶æ›´æ–°Xå€¼
        daysInput.addEventListener('input', function() {
            xDaysSpan.textContent = this.value || 'x';
        });
        
        // è®¡ç®—æŒ‰é’®äº‹ä»¶
        calculateBtn.addEventListener('click', function() {
            // è·å–è¾“å…¥å€¼
            const currentResource = parseFloat(document.getElementById('currentResource').value) || 0;
            const dailyResource = parseFloat(document.getElementById('dailyResource').value) || 0;
            const days = parseInt(daysInput.value) || 0;
            const eventResource = parseFloat(document.getElementById('eventResource').value) || 0;
            
            // è·å–å¡ç‰Œèµ„æº
            let cardResources = 0;
            
            if (smallCard.checked) {
                const smallCardDailyValue = parseFloat(smallCardDaily.value) || 0;
                cardResources += smallCardDailyValue * days;
            }
            
            if (largeCard.checked && !largeCard.disabled) {
                const largeCardDailyValue = parseFloat(largeCardDaily.value) || 0;
                cardResources += largeCardDailyValue * days;
            }
            
            if (yearCard.checked) {
                const yearCardResourceValue = parseFloat(yearCardResource.value) || 0;
                cardResources += yearCardResourceValue;
            }
            
            // è®¡ç®—æ€»èµ„æº
            const totalResource = currentResource + (dailyResource * days) + cardResources + eventResource;
            
            // æ˜¾ç¤ºç»“æœ
            daysCountSpan.textContent = days;
            totalResourceSpan.textContent = totalResource.toLocaleString();
            resultDiv.classList.add('show');
        });
        
        // é‡ç½®æŒ‰é’®äº‹ä»¶
        resetBtn.addEventListener('click', function() {
            // é‡ç½®æ‰€æœ‰è¾“å…¥
            document.getElementById('currentResource').value = '';
            document.getElementById('dailyResource').value = '';
            daysInput.value = '';
            document.getElementById('eventResource').value = '';
            
            // é‡ç½®æ¸¸æˆé€‰æ‹©
            gameSelect.value = 'none';
            currentGame = 'none';
            body.style.backgroundImage = '';
            
            // é‡ç½®å¤é€‰æ¡†
            smallCard.checked = false;
            largeCard.checked = false;
            yearCard.checked = false;
            
            // é‡ç½®è¾“å…¥æ¡†
            smallCardDaily.value = '';
            largeCardDaily.value = '';
            yearCardResource.value = '';
            
            // éšè—å¡ç‰Œè¾“å…¥æ¡†
            smallCardInput.classList.remove('show');
            largeCardInput.classList.remove('show');
            yearCardInput.classList.remove('show');
            
            // é‡ç½®æœˆå¡çŠ¶æ€
            largeCard.disabled = false;
            largeCardLabel.classList.remove('disabled');
            yearCardLabel.style.display = 'flex';
            
            // é‡ç½®å ä½ç¬¦
            smallCardDaily.placeholder = 'æ¯å¤©è·å–èµ„æºæ•°é‡';
            largeCardDaily.placeholder = 'æ¯å¤©è·å–èµ„æºæ•°é‡';
            yearCardResource.placeholder = 'ç›®å‰å°šæœªé¢†å–çš„å¹´å¡èµ„æºæ•°é‡';
            
            // é‡ç½®Xå€¼æ˜¾ç¤º
            xDaysSpan.textContent = 'x';
            
            // éšè—ç»“æœ
            resultDiv.classList.remove('show');
        });
        
        // ä¸»é¢˜åˆ‡æ¢åŠŸèƒ½
        themeToggle.addEventListener('click', function() {
            document.body.classList.toggle('dark-mode');
            this.textContent = document.body.classList.contains('dark-mode') ? 'â˜€ï¸' : 'ğŸŒ™';
        });
        
        // åˆå§‹åŒ–
        updateGameConfig();
    </script>
